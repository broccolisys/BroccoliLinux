#include <stdio.h>
#include <stdlib.h>

#define MEMBER 2
#define ZERO 0

typedef struct{
	char name[10];
	char phone[20];
	int age;
}info_t;

int main(void) {
	info_t info[MEMBER];
	int i, j;

	for(i=ZERO;i<MEMBER;i++){
		printf("name : ");
		scanf("%s",&info[i].name);

		printf("age : ");
		scanf("%d",&info[i].age);

		for(j=ZERO-1;j<i+1;j++){
			puts("----------------------------------------");
			printf("\n|\t name : %s\t|\t age : %d\t\n", info[i].name, info[i].age);
			puts("----------------------------------------");
		}
	}


	return EXIT_SUCCESS;
}
