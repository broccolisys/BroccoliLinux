#include <stdio.h>
#include <stdlib.h>

#define MEMBER 2

int main(void) {
	char *name=(char*)malloc(sizeof(char)*10);
	int age;

	for(int i=0;i<MEMBER;i++){
		printf("name : ");
		scanf("%s",&name);

		printf("age: ");
		scanf("%d",&age);

		printf("%s %d\n",name,age);
	}

	return EXIT_SUCCESS;
}
