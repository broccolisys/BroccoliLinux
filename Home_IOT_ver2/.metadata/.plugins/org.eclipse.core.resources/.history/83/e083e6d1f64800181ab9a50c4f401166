#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define BOOL	int
#define TRUE	1
#define ON		1
#define OFF	0

void display_menu(){
	puts("0. LIST MENU");
	puts("1. TV - ON/OFF");
	puts("2. AIRCON - ON/OFF");
	puts("3. LAMP - ON/OFF");
	puts("4. DOOR - ON/OFF");
	puts("10.EXIT");
}

void ONOFF(BOOL *state){
	if(*state==OFF){
		*state=ON;
	}else{
		*state=OFF;
	}
}

int main(void) {
	char choice[10]={0,};	// 혹은 *choice[10]에 scanf("%s",choice)
	char* State_MSG[3]={"OFF","ON"};
	BOOL TV = OFF;
	BOOL AIRCON = OFF;
	BOOL LAMP = OFF;
	BOOL DOOR = OFF;


	puts("==============================");
	puts("- HOME IoT CONTROLLER -");
	puts("==============================");

	display_menu();
	while(TRUE){
		scanf("%s",&choice);
		if(!strcmp(choice,"0")){
			display_menu();
			continue;
		}else if(!strcmp(choice,"1")){
			ONOFF(&TV);
			printf("TV is %s\n",State_MSG[TV]);
		}else if(!strcmp(choice,"2")){
			ONOFF(&AIRCON);
			printf("AIRCON is %s\n",State_MSG[AIRCON]);
		}else if(!strcmp(choice,"3")){
			ONOFF(&LAMP);
			printf("LAMP is %s\n",State_MSG[LAMP]);
		}else if(!strcmp(choice,"4")){
			ONOFF(&DOOR);
			printf("DOOR is %s\n",State_MSG[DOOR]);
		}else if(!strcmp(choice,"10")){
			puts("System Exit. GoodBye!");
			break;
		}else{
			puts("Wrong input!!");
		}
	}
	return EXIT_SUCCESS;
}
